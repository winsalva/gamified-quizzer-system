<div class="sub-container">
  <h1>Sign here</h1>
  <%= if get_flash(@conn, :error) do %>
  <div class="alert alert-danger">
    <p><%= get_flash(@conn, :error) %></p>
  </div>
<% end %>
<%= form_for @user, Routes.user_page_path(@conn, :create), fn f -> %>
<label>Username</label>
<%= text_input f, :username, placeholder: "Enter username.." %>
<%= error_tag f, :username %>

<%= submit "Register" %>
<% end %>
<br>
<%= link "Log in", to: Routes.session_path(@conn, :new) %>
</div>
