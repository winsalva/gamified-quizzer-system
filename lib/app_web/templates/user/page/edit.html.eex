<div class="sub-container">
  <br>
  <h2 align="center"><b>Edit User: <%= @user.data.username %></b></h2>
  <%= form_for @user, Routes.user_page_path(@conn, :update, @user.data), fn f -> %>
  <label>Password</label>
  <%= text_input f, :password, placeholder: "Enter password for user.." %>
  <label>Subscription Expiration</label>
  <%= datetime_select f, :subs_expire, builder: fn b -> %>
  Date: <%= b.(:day, []) %> / <%= b.(:month, []) %> / <%= b.(:year, []) %>
  Time: <%= b.(:hour, []) %> : <%= b.(:minute, []) %> : <%= b.(:second, []) %>
  <% end %>
  
  <%= submit "Save" %>
  <% end %>
  <br>
</div>

