<div class="sub-container">
  <h1>New Video</h1>
  <%= form_for @video, Routes.video_page_path(@conn, :create), fn f -> %>
  <label>Title</label>
  <%= text_input f, :title, placeholder: "Video title.." %>
  <%= error_tag f, :title %>

  <label>Description</label>
  <%= textarea f, :description, placeholder: "Add video description.." %>
  <%= error_tag f, :description %>

  <%= submit "Upload" %>
  <% end %>
</div>
